<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Teachers</h1>

  <table class="table">
    <thead>
      <tr>
          <th>Person</th>
          <th>Graduation</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teachers.each do |teacher| %>
        <tr>
            <td><%= teacher.person_id %></td>
            <td><%= teacher.graduation %></td>
            <td><%= link_to 'Show', teacher %></td>
          <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
          <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Teacher', new_teacher_path, class: "btn btn-success min-width-btn" %>

</div>