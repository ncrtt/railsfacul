<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Items</h1>

  <table class="table">
    <thead>
      <tr>
          <th>Name</th>
          <th>Active</th>
          <th>Type item</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.active %></td>
            <td><%= item.type_item_id %></td>
            <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Item', new_item_path, class: "btn btn-success min-width-btn" %>

</div>