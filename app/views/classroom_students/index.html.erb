<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Classroom Students</h1>

  <table class="table">
    <thead>
      <tr>
          <th>Classroom</th>
          <th>Student</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @classroom_students.each do |classroom_student| %>
        <tr>
            <td><%= classroom_student.classroom_id %></td>
            <td><%= classroom_student.student_id %></td>
            <td><%= link_to 'Show', classroom_student %></td>
          <td><%= link_to 'Edit', edit_classroom_student_path(classroom_student) %></td>
          <td><%= link_to 'Destroy', classroom_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Classroom Student', new_classroom_student_path, class: "btn btn-success min-width-btn" %>

</div>