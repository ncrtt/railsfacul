<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Classroom Teachers</h1>

  <table class="table">
    <thead>
      <tr>
          <th>Classroom</th>
          <th>Teacher</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @classroom_teachers.each do |classroom_teacher| %>
        <tr>
            <td><%= classroom_teacher.classroom_id %></td>
            <td><%= classroom_teacher.teacher_id %></td>
            <td><%= link_to 'Show', classroom_teacher %></td>
          <td><%= link_to 'Edit', edit_classroom_teacher_path(classroom_teacher) %></td>
          <td><%= link_to 'Destroy', classroom_teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Classroom Teacher', new_classroom_teacher_path, class: "btn btn-success min-width-btn" %>

</div>